<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.com.yangle.teammatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".ApplicationTM"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/IntroTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/IntroTheme" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".UserInfoActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchMatchActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchResutActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchGroundActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".RegistMatchActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MatchProcActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".RankingActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".util.DialogTimePickerActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".util.DialogAlertActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/DialogTheme" />
    </application>

</manifest>