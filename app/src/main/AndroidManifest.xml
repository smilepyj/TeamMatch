<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.com.yangle.teammatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <meta-data
        android:name="com.kakao.sdk.AppKey"
        android:value="79f45e8d30e69de7771e9f1030c5529b" />

    <application
        android:name=".ApplicationTM"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_football" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".IntroActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/IntroTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/IntroTheme" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".UserInfoActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchMatchActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchResutActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SearchGroundActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".RegistMatchActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MatchProcActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".RankingActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".util.DialogStartTimePickerActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".util.DialogAlertActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".util.DialogTermServiceActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".util.DialogPrivacyActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".GroundDetailActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".util.DialogMatchTimePickerActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".GroundLocationActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".util.DialogMatchApplyActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".util.DialogMatchSuccessActivity"
            android:theme="@style/DialogTheme" />
        <activity android:name=".util.DialogRatingActivity"
            android:theme="@style/DialogTheme" />

        <activity
            android:name="com.kakao.auth.authorization.authcode.KakaoWebViewActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>