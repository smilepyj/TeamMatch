<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchMatchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_regular"
            android:text="@string/search_match_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_17" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:layout_marginBottom="@dimen/dimen_size_5"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_select_field"
                        android:textColor="@color/color_searchmatch_title"
                        android:textSize="@dimen/font_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_search_match_field"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_search_match_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/search_match_field_bssic"
                        android:textColor="@color/color_searchmatch_select"
                        android:textSize="@dimen/font_size_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ll_under_line"
                        android:layout_marginTop="@dimen/dimen_size_8"
                        android:background="@color/color_searchmatch_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_select_day"
                        android:textColor="@color/color_searchmatch_title"
                        android:textSize="@dimen/font_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_search_match_day"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_search_match_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_day_basic"
                        android:textColor="@color/color_searchmatch_select"
                        android:textSize="@dimen/font_size_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ll_under_line"
                        android:layout_marginTop="@dimen/dimen_size_8"
                        android:background="@color/color_searchmatch_line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_start_time"
                        android:textColor="@color/color_searchmatch_title"
                        android:textSize="@dimen/font_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_search_match_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_search_match_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="@string/search_match_time_basic"
                            android:textColor="@color/color_searchmatch_select"
                            android:textSize="@dimen/font_size_20" />

                        <Button
                            android:id="@+id/bt_search_match_time_nothing"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/selector_button_search"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_time_nothing"
                            android:textColor="@drawable/selector_button_search_text"
                            android:textSize="@dimen/font_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ll_under_line"
                        android:layout_marginTop="@dimen/dimen_size_6"
                        android:background="@color/color_searchmatch_line" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_select_number"
                        android:textColor="@color/color_searchmatch_title"
                        android:textSize="@dimen/font_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <Button
                            android:id="@+id/bt_search_match_number_nothing"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_number_nothing"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <Button
                            android:id="@+id/bt_search_match_number_5"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_number_5"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <Button
                            android:id="@+id/bt_search_match_number_6"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_number_6"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ll_under_line"
                        android:layout_marginTop="@dimen/dimen_size_6"
                        android:background="@color/color_searchmatch_line" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:text="@string/search_match_select_level"
                        android:textColor="@color/color_searchmatch_title"
                        android:textSize="@dimen/font_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <Button
                            android:id="@+id/bt_search_match_level_challenger"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_challenger"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25" />

                        <Button
                            android:id="@+id/bt_search_match_level_diamond"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_diamond"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25" />

                        <Button
                            android:id="@+id/bt_search_match_level_platinum"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_platinum"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25" />

                        <Button
                            android:id="@+id/bt_search_match_level_gold"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_gold"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25" />

                        <Button
                            android:id="@+id/bt_search_match_level_silver"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_silver"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25" />

                        <Button
                            android:id="@+id/bt_search_match_level_nothing"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:background="@drawable/selector_button_select"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:minHeight="0dp"
                            android:text="@string/search_match_level_nothing"
                            android:textColor="@drawable/selector_button_select_text"
                            android:textSize="@dimen/font_size_16" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ll_under_line"
                        android:layout_marginTop="@dimen/dimen_size_6"
                        android:background="@color/color_searchmatch_line" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <Button
                    android:id="@+id/bt_search_match_search"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:background="@drawable/selector_button_search"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/search_match_search"
                    android:textColor="@drawable/selector_button_search_text"
                    android:textSize="@dimen/font_size_20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>