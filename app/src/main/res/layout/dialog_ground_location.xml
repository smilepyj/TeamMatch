<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_size_340"
    android:layout_height="@dimen/dimen_size_280"
    android:background="@drawable/ic_listview_item_background"
    android:orientation="vertical"
    tools:context=".util.DialogAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_178"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:id="@+id/tv_alert_dialog_contents_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/color_007338"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/tv_alert_dialog_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/dimen_size_5"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:textColor="@color/color_313131"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>