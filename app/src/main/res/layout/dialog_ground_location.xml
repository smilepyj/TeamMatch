<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_size_220"
    android:layout_height="@dimen/dimen_size_220"
    android:orientation="vertical"
    tools:context=".util.DialogAlertActivity">

    <LinearLayout
        android:id="@+id/ll_alert_ground_location_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/dimen_size_5"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:textColor="@color/color_313131"
            android:lineSpacingMultiplier="1.5"
            android:text="위치 보기"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_alert_ground_location_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/dimen_size_5"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:textColor="@color/color_313131"
            android:lineSpacingMultiplier="1.5"
            android:text="카카오 내비 바로가기"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_alert_ground_location_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/dimen_size_5"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:textColor="@color/color_313131"
            android:lineSpacingMultiplier="1.5"
            android:text="주소 복사"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_alert_ground_location_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="@dimen/dimen_size_5"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center"
            android:textColor="@color/color_313131"
            android:lineSpacingMultiplier="1.5"
            android:text="닫 기"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>