<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchResutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_regular"
            android:text="@string/search_result_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_17" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_search_result_listview_background"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_search_result_button_change_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_search_result_ground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_search_result_condition_background"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:padding="@dimen/tv_search_result_condition_padding"
                            android:text="@string/search_result_condition_ground"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="@dimen/ll_margin"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_search_result_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_search_result_condition_background"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:padding="@dimen/tv_search_result_condition_padding"
                            android:text="@string/search_result_condition_date"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_size_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_search_result_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_search_result_condition_background"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:padding="@dimen/tv_search_result_condition_padding"
                            android:text="@string/search_result_condition_time"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="@dimen/ll_margin"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_search_result_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_search_result_condition_background"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:padding="@dimen/tv_search_result_condition_padding"
                            android:text="@string/search_result_condition_member"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_size_16" />

                        <LinearLayout
                            android:layout_width="@dimen/ll_margin"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_search_result_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_search_result_condition_background"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:padding="@dimen/tv_search_result_condition_padding"
                            android:text="@string/search_result_condition_level"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_size_16" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.75"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <Button
                            android:id="@+id/bt_search_result_change_condition"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:background="@drawable/ic_button_change_condition"
                            android:fontFamily="@font/notosanskr_medium"
                            android:text="@string/search_result_change_condition"
                            android:textColor="@color/color_search_result_button_change_text"
                            android:textSize="@dimen/font_size_18" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_search_result_button_change_border" />

        <LinearLayout
            android:id="@+id/ll_search_result_yes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.75"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <ListView
                    android:id="@+id/lv_search_result_match"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9.75"
                    android:divider="@null"
                    android:dividerHeight="0dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search_result_no"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sorry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:text="@string/search_result_no"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>