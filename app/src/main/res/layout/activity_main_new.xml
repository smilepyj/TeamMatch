<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background_main_new"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/im_background_main_new"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                            <ImageView
                                android:layout_width="240dp"
                                android:layout_height="144dp"
                                android:background="@drawable/ic_main_logo_new" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/ll_main_button"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <Button
                            android:id="@+id/bt_main_search_match"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="306dp"
                            android:layout_height="76dp"
                            android:background="@drawable/ic_button_round_bg"
                            android:drawableLeft="@drawable/ic_icon_search_new"
                            android:drawablePadding="@dimen/bt_main_padding"
                            android:drawableRight="@drawable/ic_icon_arrow_new"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center_vertical|left"
                            android:paddingHorizontal="30dp"
                            android:includeFontPadding="false"
                            android:text="@string/main_search_match"
                            android:textColor="@color/color_535353"
                            android:textSize="@dimen/font_size_18" />

                        <Button
                            android:id="@+id/bt_main_registration_match"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="306dp"
                            android:layout_height="76dp"
                            android:background="@drawable/ic_button_round_bg"
                            android:drawableLeft="@drawable/ic_icon_match_save"
                            android:drawablePadding="@dimen/bt_main_padding"
                            android:drawableRight="@drawable/ic_icon_arrow_new"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center_vertical|left"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="30dp"
                            android:text="@string/main_registration_match"
                            android:textColor="@color/color_535353"
                            android:textSize="@dimen/font_size_18" />

                        <Button
                            android:id="@+id/bt_main_in_progress_matching"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="306dp"
                            android:layout_height="76dp"
                            android:background="@drawable/ic_button_round_bg"
                            android:drawableLeft="@drawable/ic_icon_mymatch_new"
                            android:drawablePadding="@dimen/bt_main_padding"
                            android:drawableRight="@drawable/ic_icon_arrow_new"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center_vertical|left"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="30dp"
                            android:text="@string/main_in_progress_matching"
                            android:textColor="@color/color_535353"
                            android:textSize="@dimen/font_size_18" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_regular"
                            android:text="Copyright 2018. OOO. All right reserved."
                            android:textColor="@color/colorWhite"
                            android:lineSpacingExtra="8sp"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>